<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/color_font_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文字 和 颜色"
        android:textColor="#FF0033"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/dot_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="显示不全用点 leslie fish, take me fly"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#654321"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="take me fly"
        android:drawableRight="@drawable/icon_text"
        android:drawablePadding="40dp"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/middle_line_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="take me fly"
        android:textSize="34sp" />


    <TextView
        android:id="@+id/under_line_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="take me fly"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/roll_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人民日报生活漫步：莫让千元打车费毁了专车"
        android:textSize="34sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:scrollHorizontally="true"
        android:focusableInTouchMode="true"/>


</LinearLayout>